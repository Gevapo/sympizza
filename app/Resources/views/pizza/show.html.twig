{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pizza</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pizza.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pizza.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ pizza.price }}</td>
            </tr>
            <tr>
                <th>Promo price</th>
                <td>{{ pizza.promoPrice }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ pizza.info }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{ asset(pizza.webPath) }}" style="width: 50px"></td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if pizza.createdAt %}{{ pizza.createdAt|date('d/m/Y H:i') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if pizza.updatedAt %}{{ pizza.updatedAt|date('d/m/Y H:i') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pizza_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pizza_edit', { 'id': pizza.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
